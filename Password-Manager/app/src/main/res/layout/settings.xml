<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:gravity="center_vertical"
		android:layout_marginTop="15dp"
		android:foreground="@drawable/ripple">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:background="@drawable/autofill_pass_bg">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:padding="10dp">

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:background="@drawable/autofill_icon"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Autofill Password"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_marginLeft="15dp"
					android:textColor="#000000"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/gray"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"/>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Autofill the password when you enter the Web or Application"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Activate"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="@color/lightBlue"
					android:padding="10dp"
					android:foreground="@drawable/ripple"
					android:onClick="activateAutofill"
					android:id="@+id/settingsTextView1"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:gravity="center_vertical"
		android:id="@+id/exportPasswords"
		android:foreground="@drawable/ripple"
		android:onClick="exportPass">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginLeft="10dp"
			android:background="@drawable/export_icon"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Export Passwords"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_marginLeft="15dp"
			android:textColor="#000000"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:gravity="center_vertical"
		android:id="@+id/importPasswords"
		android:foreground="@drawable/ripple"
		android:onClick="importPass">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginLeft="10dp"
			android:background="@drawable/import_icon"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Import Passwords"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_marginLeft="15dp"
			android:textColor="#000000"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="20dp"
		android:id="@+id/settingsLinearLayout1"
		android:visibility="gone">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:gravity="center_vertical"
			android:foreground="@drawable/ripple"
			android:background="@drawable/autofill_pass_bg">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="New Update Available"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#000000"
				android:layout_marginLeft="10dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="A new version of this app is avaible and we suggest you to update this App to latest version"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="10dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Update"
				android:foreground="@drawable/ripple"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="@color/lightBlue"
				android:padding="10dp"
				android:onClick="updateApp"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

